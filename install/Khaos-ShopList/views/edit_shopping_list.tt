[% INCLUDE lists.tt %]
<h3>Edit Shopping List</h3>
<h3>[% shopping_list_name %]</h3>

[% error_msg %]

<table>
    [% FOREACH group IN shopping_list %]
        <tr><td><h4>[% group.item_group_name %]</h4></td></tr>

        [% count = -1 %]

                <tr>

        [% FOREACH item IN group.items %]
            [% count = count + 1 %]
            [% IF count > 2 %]
                [% count = 0 %]
                </tr>
                <tr>
            [% END %]

                    <td>
                        <button class='plus_minus quantity' name ='[% item.id %]' value='minus'>-</button>
                        <input  class='quantity' id='quantity_item_id_[% item.id %]' name ='[% item.id %]' value='[% IF item.shopping_list_quantity %][% item.shopping_list_quantity %][% END %]' type='text' style="width: 25px;" disabled >
                        <button class='plus_minus quantity' name ='[% item.id %]' value='plus'>+</button>


                    <td><a href='[% request.uri_base %]/edit_item/[% item.id %]'>[% item.shops_n_name %]</a></td>
        [% END %]

                </tr>

    [% END %]
</table>


